<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
  <pluginRepositories>
    <pluginRepository>
      <id>talend-nexus</id>
      <url>https://talend-update.talend.com/nexus/content/repositories/TalendOpenSource/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <profiles>
    <profile>
      <id>use-talent-nexus</id>
      <repositories>
        <repository>
          <id>talend-nexus</id>
          <url>https://talend-update.talend.com/nexus/content/repositories/TalendOpenSource/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>talend-nexus</id>
          <url>https://talend-update.talend.com/nexus/content/repositories/TalendOpenSource/</url>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>use-talent-nexus</activeProfile>
  </activeProfiles>
</settings>
